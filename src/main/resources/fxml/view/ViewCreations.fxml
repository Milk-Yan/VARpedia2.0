<GridPane id="red" prefHeight="600.0" prefWidth="1024.0" stylesheets="@/main/resources/css/ListStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.view.ViewCreations">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" percentHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" percentHeight="60.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" percentHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" percentHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="922.0" spacing="10.0" GridPane.rowIndex="1">
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
      </VBox>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Here is the list of current audio/creations:" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font size="26.0" />
         </font>
      </Text>
      <TabPane fx:id="_tabPane" minHeight="200.0" prefHeight="450.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <tabs>
            <Tab fx:id="_audioTab" closable="false" text="Audio">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TreeView fx:id="_listOfAudio" showRoot="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="_creationTab" closable="false" text="Creations">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TreeView fx:id="_listOfCreations" showRoot="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin>
      </TabPane>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
         <children>
            <Button id="play" fx:id="_playBtn" mnemonicParsing="false" onAction="#play" prefHeight="42.0" prefWidth="300.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <ProgressIndicator visible="false" />
            <Button id="delete" fx:id="_deleteBtn" mnemonicParsing="false" onAction="#delete" prefHeight="42.0" prefWidth="300.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Button fx:id="_mainMenuBtn" mnemonicParsing="false" onAction="#mainMenuPress" prefHeight="42.0" prefWidth="600.0" text="Quit to Main Menu" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</GridPane>
