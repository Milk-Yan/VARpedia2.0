<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      spacing="30.0" xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="main.java.controllers.createAudio.TermSearch">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="What term would you like to search for?">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
        <TextField fx:id="_termInput" promptText="Wikipedia term"/>
        <Button fx:id="_searchBtn" mnemonicParsing="false" onAction="#search" prefWidth="300.0"
                text="Search">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="_mainMenuBtn" mnemonicParsing="false" onAction="#mainMenu" prefWidth="300.0"
                text="Quit to Main Menu">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </children>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
</VBox>
